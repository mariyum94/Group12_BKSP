<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group12_bksp.Mansura.CTrainee6"
            prefWidth="900.0" prefHeight="650.0">

    <!-- Title -->
    <Label text="Request Coaching Session" layoutX="20.0" layoutY="20.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Radio Buttons for Session Type -->
    <Label text="Session Type:" layoutX="20.0" layoutY="70.0"/>
    <RadioButton fx:id="morningRadio" text="Morning" layoutX="120.0" layoutY="70.0"/>
    <RadioButton fx:id="afternoonRadio" text="Afternoon" layoutX="220.0" layoutY="70.0"/>
    <RadioButton fx:id="eveningRadio" text="Evening" layoutX="340.0" layoutY="70.0"/>

    <!-- TextField for Coach Name -->
    <Label text="Coach Name:" layoutX="20.0" layoutY="110.0"/>
    <TextField fx:id="coachTextField" layoutX="120.0" layoutY="105.0" prefWidth="200.0"/>

    <!-- TextArea for Notes -->
    <Label text="Notes:" layoutX="20.0" layoutY="150.0"/>
    <TextArea fx:id="notesTextArea" layoutX="120.0" layoutY="145.0"
              prefWidth="400.0" prefHeight="80.0"/>

    <!-- Button to Request Session -->
    <Button text="Request Session" layoutX="120.0" layoutY="240.0" prefWidth="150.0"
            onAction="#handleRequestSession"/>

    <!-- TableView to show session requests -->
    <TableView fx:id="sessionTable" layoutX="20.0" layoutY="300.0"
               prefWidth="860.0" prefHeight="300.0">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150.0"/>
            <TableColumn fx:id="timeColumn" text="Time" prefWidth="150.0"/>
            <TableColumn fx:id="coachColumn" text="Coach" prefWidth="200.0"/>
            <TableColumn fx:id="notesColumn" text="Notes" prefWidth="360.0"/>
        </columns>
    </TableView>

</AnchorPane>
