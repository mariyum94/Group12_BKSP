<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.group12_bksp.Mansura.CTrainee6">

    <!-- Title -->
    <Label layoutX="246.0" layoutY="14.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Request Coaching Session" />

    <!-- Radio Buttons for Session Type -->
    <Label layoutX="20.0" layoutY="70.0" text="Session Type:" />
    <RadioButton fx:id="morningRadio" layoutX="120.0" layoutY="70.0" text="Morning" />
    <RadioButton fx:id="afternoonRadio" layoutX="220.0" layoutY="70.0" text="Afternoon" />
    <RadioButton fx:id="eveningRadio" layoutX="340.0" layoutY="70.0" text="Evening" />

    <!-- TextField for Coach Name -->
    <Label layoutX="20.0" layoutY="110.0" text="Coach Name:" />
    <TextField fx:id="coachTextField" layoutX="120.0" layoutY="105.0" prefWidth="200.0" />

    <!-- TextArea for Notes -->
    <Label layoutX="20.0" layoutY="150.0" text="Notes:" />
    <TextArea fx:id="notesTextArea" layoutX="120.0" layoutY="145.0" prefHeight="80.0" prefWidth="400.0" />

    <!-- Button to Request Session -->
    <Button layoutX="120.0" layoutY="240.0" onAction="#handleRequestSession" prefWidth="150.0" text="Request Session" />

    <!-- TableView to show session requests -->
    <TableView fx:id="sessionTable" layoutX="20.0" layoutY="300.0" prefHeight="300.0" prefWidth="860.0">
        <columns>
            <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date" />
            <TableColumn fx:id="timeColumn" prefWidth="150.0" text="Time" />
            <TableColumn fx:id="coachColumn" prefWidth="200.0" text="Coach" />
            <TableColumn fx:id="notesColumn" prefWidth="360.0" text="Notes" />
        </columns>
    </TableView>

</AnchorPane>
