<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group12_bksp.Mansura.CTrainee7"
            prefWidth="900.0" prefHeight="650.0">

    <!-- Title -->
    <Label text="Team Assignment" layoutX="20.0" layoutY="20.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Button to Load Team Info -->
    <Button text="View Team Info" layoutX="20.0" layoutY="70.0" prefWidth="150.0"
            onAction="#handleLoadTeam"/>

    <!-- TableView to display team members -->
    <TableView fx:id="teamTable" layoutX="20.0" layoutY="120.0"
               prefWidth="860.0" prefHeight="500.0">
        <columns>
            <TableColumn fx:id="playerNameColumn" text="Player Name" prefWidth="300.0"/>
            <TableColumn fx:id="roleColumn" text="Role" prefWidth="200.0"/>
            <TableColumn fx:id="jerseyColumn" text="Jersey Number" prefWidth="150.0"/>
            <TableColumn fx:id="positionColumn" text="Position" prefWidth="210.0"/>
        </columns>
    </TableView>

</AnchorPane>
