         <Font name="System Bold" size="22.0" />
      </font></Label>

    <Label layoutX="40.0" layoutY="80.0" text="Athlete:" />
    <ComboBox fx:id="athleteComboBox" layoutX="150.0" layoutY="75.0" prefWidth="250.0" promptText="Select athlete..." />

    <Label layoutX="40.0" layoutY="120.0" text="Sport:" />
    <ComboBox fx:id="sportComboBox" layoutX="150.0" layoutY="115.0" prefWidth="250.0" promptText="Select sport..." />

    <TableView fx:id="progressTable" layoutX="40.0" layoutY="180.0" prefHeight="300.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
            <TableColumn fx:id="colMetric" prefWidth="200.0" text="Performance" />
            <TableColumn fx:id="colRemarks" prefWidth="410.0" text="Remarks" />
        </columns>
    </TableView>

    <Button layoutX="680.0" layoutY="510.0" onAction="#ReturnHomeButton" prefWidth="120.0" text="Return Home" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

</AnchorPane>
