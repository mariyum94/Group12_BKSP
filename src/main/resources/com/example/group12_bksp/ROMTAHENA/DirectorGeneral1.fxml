<AnchorPane prefHeight="557.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group12_bksp.ROMTAHENA.DirectorGeneral1">

    <Label layoutX="343.0" layoutY="25.0" prefHeight="26.0" prefWidth="142.0" style="-fx-font-size:20px; -fx-font-weight:bold;" text="Athlete Progress" textFill="#519c56">
