<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="553.0" prefWidth="828.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group12_bksp.ROMTAHENA.DirectorGeneral4">

    <Label layoutX="341.0" layoutY="20.0" prefHeight="26.0" prefWidth="194.0" style="-fx-font-size:20px; -fx-font-weight:bold;" text="Performance Reports" textFill="#519c56">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Label>

    <Label layoutX="40.0" layoutY="80.0" text="Athlete:" />
    <ComboBox fx:id="athleteComboBox" layoutX="150.0" layoutY="75.0" prefWidth="250.0" promptText="Select athlete..." />
    <Label layoutX="40.0" layoutY="120.0" text="Sport:" />
    <ComboBox fx:id="sportComboBox" layoutX="150.0" layoutY="115.0" prefWidth="250.0" promptText="Select sport..." />

    <Label layoutX="40.0" layoutY="160.0" text="From:" />
    <DatePicker fx:id="fromDatePicker" layoutX="150.0" layoutY="155.0" prefWidth="200.0" />

    <Label layoutX="380.0" layoutY="160.0" text="To:" />
    <DatePicker fx:id="toDatePicker" layoutX="420.0" layoutY="155.0" prefWidth="200.0" />

    <Button layoutX="201.0" layoutY="510.0" onAction="#GenerateReportButton" prefWidth="140.0" text="Generate Report" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <TableView fx:id="reportTable" layoutX="40.0" layoutY="210.0" prefHeight="280.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="120.0" text="Date" />
            <TableColumn fx:id="colEvent" prefWidth="200.0" text="Event" />
            <TableColumn fx:id="colPerformance" prefWidth="200.0" text="Performance" />
            <TableColumn fx:id="colRemarks" prefWidth="240.0" text="Remarks" />
        </columns>
    </TableView>

    <Button layoutX="40.0" layoutY="510.0" onAction="#ExportButton" prefWidth="140.0" text="Export Report" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <Button layoutX="680.0" layoutY="510.0" onAction="#ReturnHomeButton" prefWidth="120.0" text="Return Home" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

</AnchorPane>
