<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="563.0" prefWidth="833.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group12_bksp.ROMTAHENA.CricketCoach5">

    <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size:20px; -fx-font-weight:bold;" text="Evaluate Player Fitness" textFill="#519c56">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Label>

    <Label layoutX="40.0" layoutY="80.0" text="Select Player:" />
    <ComboBox fx:id="playerComboBox" layoutX="160.0" layoutY="75.0" prefWidth="250.0" promptText="Choose player..." />

    <Label layoutX="40.0" layoutY="120.0" text="Speed (sec):" />
    <TextField fx:id="speedField" layoutX="160.0" layoutY="115.0" prefWidth="250.0" />

    <Label layoutX="40.0" layoutY="160.0" text="Endurance (mins):" />
    <TextField fx:id="enduranceField" layoutX="160.0" layoutY="155.0" prefWidth="250.0" />

    <Label layoutX="40.0" layoutY="200.0" text="Strength (kg):" />
    <TextField fx:id="strengthField" layoutX="160.0" layoutY="195.0" prefWidth="250.0" />

    <Label layoutX="40.0" layoutY="240.0" text="Notes:" />
    <TextArea fx:id="notesArea" layoutX="160.0" layoutY="235.0" prefHeight="60.0" prefWidth="250.0" wrapText="true" />

    <Button layoutX="39.0" layoutY="510.0" onAction="#SaveButton" prefWidth="140.0" text="Save " textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <TableView fx:id="fitnessTable" layoutX="40.0" layoutY="320.0" prefHeight="180.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="colSpeed" prefWidth="120.0" text="Speed" />
            <TableColumn fx:id="colEndurance" prefWidth="120.0" text="Endurance" />
            <TableColumn fx:id="colStrength" prefWidth="120.0" text="Strength" />
            <TableColumn fx:id="colNotes" prefWidth="300.0" text="Notes" />
        </columns>
    </TableView>

    <Button layoutX="680.0" layoutY="510.0" onAction="#ReturnHomeButton" prefWidth="120.0" text="Return Home" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

</AnchorPane>
