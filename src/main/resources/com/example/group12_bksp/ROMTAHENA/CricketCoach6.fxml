<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="610.0" prefWidth="827.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group12_bksp.ROMTAHENA.CricketCoach6">

    <Label layoutX="280.0" layoutY="20.0" style="-fx-font-size:20px; -fx-font-weight:bold;" text="Communicate with Trainee" textFill="#519c56">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Label>

    <Label layoutX="40.0" layoutY="80.0" text="Select Trainee:" />
    <ComboBox fx:id="traineeComboBox" layoutX="160.0" layoutY="75.0" prefWidth="250.0" promptText="Choose trainee..." />

    <Label layoutX="40.0" layoutY="120.0" text="Message:" />
    <TextArea fx:id="messageArea" layoutX="160.0" layoutY="115.0" prefHeight="123.0" prefWidth="400.0" wrapText="true" />
    <Button layoutX="460.0" layoutY="248.0" onAction="#SendButton" prefWidth="100.0" text="Send" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>
    <TableView fx:id="communicationTable" layoutX="40.0" layoutY="296.0" prefHeight="250.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="colRecipient" prefWidth="200.0" text="Recipient" />
            <TableColumn fx:id="colMessage" prefWidth="400.0" text="Message" />
            <TableColumn fx:id="colDateTime" prefWidth="160.0" text="Date/Time" />
        </columns>
    </TableView>
    <Button layoutX="680.0" layoutY="570.0" onAction="#ReturnHomeButton" prefWidth="120.0" text="Return Home" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

</AnchorPane>
