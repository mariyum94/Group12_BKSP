<AnchorPane prefHeight="682.0" prefWidth="836.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group12_bksp.ROMTAHENA.CricketCoach7">

    <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size:20px; -fx-font-weight:bold;" text="Team Attendance" textFill="#519c56">
      <font>
         <Font name="System Bold" size="22.0" />
      </font></Label>
    <Label layoutX="40.0" layoutY="80.0" text="Date:" />
    <DatePicker fx:id="datePicker" layoutX="150.0" layoutY="75.0" prefWidth="200.0" />
    <Label layoutX="40.0" layoutY="120.0" text="Player:" />
    <ComboBox fx:id="playerComboBox" layoutX="150.0" layoutY="115.0" prefWidth="250.0" promptText="Select player..." />
    <CheckBox fx:id="presentCheckBox" layoutX="150.0" layoutY="160.0" text="Present" />
    <CheckBox fx:id="presentCheckBox1" layoutX="292.0" layoutY="160.0" text="Absent" />
    <Label layoutX="40.0" layoutY="200.0" text="Remarks:" />
    <TextArea fx:id="remarksArea" layoutX="150.0" layoutY="195.0" prefHeight="60.0" prefWidth="250.0" wrapText="true" />
    <Button layoutX="40.0" layoutY="524.0" onAction="#SaveAttendanceButton" prefWidth="140.0" text="Save Attendance" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <Button fx:id="updateAttendanceButton" layoutX="40.0" layoutY="566.0" onAction="#UpdateButton" prefWidth="140.0" text="Update" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>
    <TableView fx:id="attendanceTable" layoutX="40.0" layoutY="280.0" prefHeight="220.0" prefWidth="792.0">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="103.0" text="Date" />
            <TableColumn fx:id="colPlayer" prefWidth="148.0" text="Player" />
            <TableColumn fx:id="colStatus" prefWidth="151.0" text="Present" />
            <TableColumn fx:id="colRemarks" prefWidth="190.0" text="Absent" />
         <TableColumn prefWidth="243.0" text="Remarks" />
        </columns>
    </TableView>
    <Button layoutX="680.0" layoutY="524.0" onAction="#ReturnHomeButton" prefWidth="120.0" text="Return Home" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

</AnchorPane>
