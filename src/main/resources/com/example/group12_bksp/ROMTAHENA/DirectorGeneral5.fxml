<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="557.0" prefWidth="814.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group12_bksp.ROMTAHENA.DirectorGeneral5">

    <Label layoutX="338.0" layoutY="20.0" prefHeight="26.0" prefWidth="146.0" style="-fx-font-size:20px; -fx-font-weight:bold;" text="Recruit Coaches" textFill="#519c56">
      <font>
         <Font name="System Bold" size="23.0" />
      </font></Label>

    <Label layoutX="40.0" layoutY="80.0" text="Coach Name:" />
    <TextField fx:id="coachNameField" layoutX="150.0" layoutY="75.0" prefWidth="250.0" />

    <Label layoutX="40.0" layoutY="120.0" text="Sport:" />
    <ComboBox fx:id="sportComboBox" layoutX="150.0" layoutY="115.0" prefWidth="250.0" promptText="Select sport..." />

    <Label layoutX="40.0" layoutY="160.0" text="Experience (Years):" />
    <TextField fx:id="experienceField" layoutX="150.0" layoutY="155.0" prefWidth="250.0" />

    <Label layoutX="40.0" layoutY="200.0" text="Contact:" />
    <TextField fx:id="contactField" layoutX="150.0" layoutY="195.0" prefWidth="250.0" />

    <Button layoutX="43.0" layoutY="510.0" onAction="#HireCoachButton" prefWidth="100.0" text="Hire" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <Button layoutX="167.0" layoutY="510.0" onAction="#RejectCoachButton" prefWidth="100.0" text="Reject" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

    <TableView fx:id="coachesTable" layoutX="40.0" layoutY="250.0" prefHeight="250.0" prefWidth="760.0">
        <columns>
            <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="colSport" prefWidth="200.0" text="Sport" />
            <TableColumn fx:id="colExperience" prefWidth="150.0" text="Experience" />
            <TableColumn fx:id="colContact" prefWidth="210.0" text="Contact" />
        </columns>
    </TableView>

    <Button layoutX="680.0" layoutY="510.0" onAction="#ReturnHomeButton" prefWidth="120.0" text="Return Home" textFill="#519c56">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>

</AnchorPane>
