<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="850.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.group12_bksp.CreateAccount">

    <children>
        <Label layoutX="320.0" layoutY="20.0" text="User Management">
            <font>
                <Font size="26.0"/>
            </font>
        </Label>

        <!-- Input Fields -->
        <Label layoutX="50.0" layoutY="80.0" text="Name:"/>
        <TextField fx:id="txtName" layoutX="150.0" layoutY="75.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="120.0" text="ID:"/>
        <TextField fx:id="txtId" layoutX="150.0" layoutY="115.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="160.0" text="Phone No:"/>
        <TextField fx:id="txtPhone" layoutX="150.0" layoutY="155.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="200.0" text="Email:"/>
        <TextField fx:id="txtEmail" layoutX="150.0" layoutY="195.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="240.0" text="Address:"/>
        <TextField fx:id="txtAddress" layoutX="150.0" layoutY="235.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="280.0" text="Gender:"/>
        <RadioButton fx:id="rbMale" layoutX="150.0" layoutY="275.0" text="Male"/>
        <RadioButton fx:id="rbFemale" layoutX="220.0" layoutY="275.0" text="Female"/>

        <Label layoutX="50.0" layoutY="320.0" text="Password:"/>
        <PasswordField fx:id="txtPassword" layoutX="150.0" layoutY="315.0" prefWidth="200.0"/>

        <Label layoutX="50.0" layoutY="360.0" text="Date of Birth:"/>
        <DatePicker fx:id="dpDateOfBirth" layoutX="150.0" layoutY="355.0" prefWidth="200.0"/>

        <!-- Buttons -->
        <Button fx:id="btnAdd" layoutX="50.0" layoutY="410.0" prefWidth="80.0" text="Add" onAction="#onAdd"/>
        <Button fx:id="btnUpdate" layoutX="150.0" layoutY="410.0" prefWidth="80.0" text="Update" onAction="#onUpdate"/>
        <Button fx:id="btnDelete" layoutX="250.0" layoutY="410.0" prefWidth="80.0" text="Delete" onAction="#onDelete"/>

        <!-- Table -->
        <TableView fx:id="userTable" layoutX="400.0" layoutY="75.0" prefHeight="400.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colName" text="Name" prefWidth="100.0"/>
                <TableColumn fx:id="colId" text="ID" prefWidth="70.0"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="90.0"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="140.0"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
